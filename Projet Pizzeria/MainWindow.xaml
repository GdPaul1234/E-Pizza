<Window
    x:Class="Projet_Pizzeria.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Projet_Pizzeria"
    xmlns:localview="clr-namespace:Projet_Pizzeria.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Projet Pizzeria"
    Width="900"
    Height="500"
    mc:Ignorable="d">

    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabItem Header="Client / Effectif">
                <localview:ClientView />
            </TabItem>

            <TabItem Header="Commandes">
                <localview:CommandeView />
            </TabItem>
            <TabItem Header="Statistiques">
                <localview:StatsView />
            </TabItem>
            <TabItem Header="Communication">
                <localview:CommunicationMessageView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>